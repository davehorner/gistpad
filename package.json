{
  "name": "gistdave",
  "displayName": "GistPad",
  "description": "Manage your code snippets and developer notes using GitHub Gists and repositories.",
  "publisher": "vsls-contrib",
  "version": "0.4.0",
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/lostintangent/davepad"
  },
  "bugs": {
    "url": "https://github.com/lostintangent/davepad/issues"
  },
  "homepage": "https://github.com/lostintangent/davepad#readme",
  "license": "MIT",
  "engines": {
    "vscode": "^1.48.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "github",
    "gist",
    "snippets",
    "wiki",
    "notes"
  ],
  "activationEvents": [
    "*",
    "onFileSystem:repo",
    "onFileSystem:gist"
  ],
  "main": "./dist/extension.js",
  "browser": "./dist/extension-web.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "GistPad",
      "properties": {
        "davepad.treeIcons": {
          "default": "true",
          "type": "boolean",
          "description": "Specifies whether to show the gist type icons in the gists tree."
        },
        "davepad.comments.showThread": {
          "default": "whenNotEmpty",
          "type": "string",
          "enum": [
            "always",
            "never",
            "whenNotEmpty"
          ],
          "description": "Specifies when to display the comment thread when you open a Gist file."
        },
        "davepad.images.directoryName": {
          "default": "images",
          "type": "string",
          "description": "Specifies the name of the directory that pasted images are uploaded to."
        },
        "davepad.images.markdownPasteFormat": {
          "default": "markdown",
          "enum": [
            "html",
            "markdown"
          ],
          "description": "Specifies the markup format to use when pasting an image into a markdown gist file."
        },
        "davepad.images.pasteType": {
          "default": "file",
          "enum": [
            "base64",
            "file"
          ],
          "description": "Specifies the upload method to use when pasting an image into a gist file."
        },
        "davepad.scratchNotes.directoryFormat": {
          "default": "",
          "type": "string",
          "description": "Specifies the moment.js format string to use when generating new scratch notes."
        },
        "davepad.scratchNotes.fileFormat": {
          "default": "LL",
          "type": "string",
          "description": "Specifies the moment.js format string to use when generating new scratch notes."
        },
        "davepad.scratchNotes.fileExtension": {
          "default": ".md",
          "type": "string",
          "description": "Specifies the file extension to use when generating new scratch notes."
        },
        "davepad.scratchNotes.show": {
          "default": true,
          "type": "boolean",
          "description": "Specifies whether or not to display the scratch notes node in the gists tree view."
        },
        "davepad.showcaseUrl": {
          "default": "https://aka.ms/davepad-showcase",
          "type": "string",
          "description": "Specifies the URL of the showcase to display gists from."
        },
        "davepad.wikis.daily.directoryName": {
          "default": "Daily",
          "type": "string",
          "description": "Specifies the name of the directory that daily pages are organized within."
        },
        "davepad.wikis.daily.titleFormat": {
          "default": "LL",
          "type": "string",
          "description": "Specifies the date format (using Moment.js syntax) that is used to for the title of daily pages."
        }
      }
    },
